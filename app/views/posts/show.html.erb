<h1><%= @post.title %></h1>
<p><%= @post.user.username %></p>

<p><%= @post.content %></p>

<% if @comments.any? %>
  <% @comments.each do |comment| %>

  <div class='card mb-3 bg-secondary'>
    <div class='card-body'>
      <p><%=comment.content %></p>
      <p> - <%= comment.user.username %></p>
    </div>
  </div>
  <%end%>
  <%= link_to 'Add a comment', new_post_comment_path(@post) %>
<%else%>
  <%= link_to 'Make a comment, taint nun!', new_post_comment_path(@post) %>
<%end%>
